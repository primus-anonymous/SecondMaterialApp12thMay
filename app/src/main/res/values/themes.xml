<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecondMaterialApp12thMay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/darker_gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@android:color/holo_green_light</item>

        <item name="headerColorMain">@color/teal_200</item>
        <item name="headerColorSecondary">@color/black</item>

        <item name="colorSurface">@android:color/holo_blue_light</item>
        <item name="android:background">@android:color/holo_orange_light</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="android:fontFamily">@font/astral_sisters</item>

        <item name="shapeAppearanceMediumComponent">@style/SmallishShapeAppearance</item>

    </style>

    <style name="Theme.SecondMaterialApp12thMay2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/Header.Small</item>

        <item name="headerColorMain">@color/black</item>
        <item name="headerColorSecondary">@color/teal_200</item>

    </style>

</resources>